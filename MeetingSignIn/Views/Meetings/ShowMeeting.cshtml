@model IEnumerable<MeetingSignIn.Models.Person>

@{
    ViewBag.Title = "ShowMeeting";
}
@using MeetingSignIn.Models;
<h2>Introduction</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2 id="test">@Html.Encode(ViewData["alias"])</h2>

<table>
    <tr>
        <td>
            <div style="text-align:center">
                <h3>Member Name</h3>
                @foreach (var item in ViewData["persons"] as List<string>)
                {
                    <p>@item</p>
                }
            </div>
        </td>

        <td style="width:600px;text-align:center">
            <div>
                <h3>Introduction</h3>
                <div>

                    <div>
                        <div style="float:left;width:49%;text-align:right">
                            <img src=@((ViewData["newest"] as Person).Photo) width="80" height="120" alt="Photo" />
                        </div>
                        <div style="float:right;width:49%;text-align:left">
                            <h4 style="width:400px"><strong>AliasName:</strong></h4>
                            <p style="width:400px">@((ViewData["newest"] as Person).Alias)</p>
                            <h4 style="width:400px"><strong>department:</strong></h4>
                            <p style="width:400px">@((ViewData["newest"] as Person).DepartMent)</p>
                        </div>
                    </div>
                    <div>
                        <h4 style="text-align:center;width:400px;float:right"><strong>Information:</strong></h4>
                        <p style="word-wrap: break-word; word-break: break-all;width:400px;float:right;text-align:right">@((ViewData["newest"] as Person).Infomation)</p>
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>
<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script>

    $().ready(function () {
        setTimeout(function () { $.post('ShowMeeting', { alias: $('#test').text() }) }, 3000);
    })
</script>

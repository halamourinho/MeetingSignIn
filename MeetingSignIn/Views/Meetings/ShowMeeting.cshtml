@model IEnumerable<MeetingSignIn.Models.Person>

@{
    ViewBag.Title = "ShowMeeting";
}
@using MeetingSignIn.Models;
<h2>Introduction</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2 id="test">@Html.Encode(ViewData["alias"])</h2>

<table>
    <tr>
        <td>
            <div>
                <h3>Member Name</h3>
                @foreach (var item in ViewData["persons"] as List<string>)
                {
                   <p>@item</p>
                }
            </div>
        </td>

        <td style="width:700px;text-align:center">
            <div>

                <h3>Introduction</h3>
                <div>
                    <img src=@((ViewData["newest"] as Person).Photo) width="120" height="180" alt="照片"/>
                </div>
                <div>
                    
                        @((ViewData["newest"] as Person).DepartMent)
             
                </div>
                <div>
                   
                        @((ViewData["newest"] as Person).Infomation)
                </div>
            </div>
        </td>
    </tr>
</table>
<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
<script>
    
    $().ready(function () {
        setTimeout(function () { $.post('ShowMeeting', { alias: $('#test').text() }) }, 3000);
    })
</script>
